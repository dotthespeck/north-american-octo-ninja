<h1 font size="10">SpaceOverflow</h1>

<% @questions.each do |question| %>
<h2><%= question.title %></h2>
  <h3>Question: <%= question.description %></h3>
  <p>User: <%= question.user.name %></p>
  <% question.answers.each do |answer| %>
    <h2>Answer: <%= answer.answer %></h2>
    <p>User: <%= answer.user.name %></p>
    <% end %>
    <% end %>
